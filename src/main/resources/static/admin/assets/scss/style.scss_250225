/*
인풋 박스*/
.input-wrap {
  @include flex-start;
  align-items: center;

  &.z-index {
    position: relative;
    z-index: 10;
  }
}


input[type="checkbox"] {
  &+label {
    &::before {
      content: url('../img/icon/checkbox.png');
    }
  }

  &:checked+label {
    &::before {
      content: url('../img/icon/checked.png');
    }
  }
}

fieldset.input-wrap {
  position: relative;

  >legend {
    float: left;

    &::after {
      *zoom: 0;
      display: block;
      width: 100%;
      height: 0;
      content: "";
    }

    &.legend {
      float: unset;
      @include flex-start;
      align-items: center;
      width: 100%;
      height: 5.5rem;
      font-size: 1.5rem;

      >small {
        white-space: nowrap;
      }
    }
  }
}


/* 테이블 */
.table-wrap {
  width: 100%;

  .table {
    overflow: hidden;
    overflow-y: auto;
    width: inherit;
    max-height: 70rem;
    border-bottom: 1px solid #8f8f91;

    &::-webkit-scrollbar {
      width: 1rem;
      height: 1rem;
    }

    &::-webkit-scrollbar-track {
      background-color: #dadadb;
    }

    &::-webkit-scrollbar-thumb {
      border-radius: .5rem;
      background-color: #8f8f91;
      -webkit-border-radius: .5rem;
      -moz-border-radius: .5rem;
      -ms-border-radius: .5rem;
      -o-border-radius: .5rem;
    }

    thead {
      th {
        z-index: 10;
        position: sticky;
        top: 0;
        background-color: #fff;
      }
    }

    table {
      width: inherit;
    }
    td{
      .icon-btn {
        margin: 0 .25rem;
        width: 3.5rem;
        height: 3.5rem;
        line-height: 3.5rem;

        img {
          margin: 0;
        }
      }
    }
  }

  .table-top {
    z-index: 10;
    @include flex-bt;
    @include relative;
    margin-bottom: 1rem;
    width: 100%;

    button {
      margin-left: auto;
    }

    .case {
      margin-left: auto;
      margin-right: 1rem;
      font-size: 1.6rem;
      font-weight: 600;
      color: #666;
    }
  }
}

.t-type-01 {
  font-size: 1.5rem;
  color: #666;

  thead {
    th {
      padding: 2rem 0;
      height: 5.5rem;
      border-bottom: 1px solid #e0e0e3;

      &:last-child {
        padding: 2rem 0;
      }

      input[type="checkbox"] {
        &+label {
          vertical-align: middle;

          &::before {
            left: 50%;
            top: 50%;
            content: url("../img/icon/checkbox.png");
            transform: translate(-50%, -50%);
            -webkit-transform: translate(-50%, -50%);
            -moz-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            -o-transform: translate(-50%, -50%);
          }
        }

        &:checked {
          &+label::before {
            content: url("../img/icon/checked.png");
          }
        }
      }
    }
  }

  tbody {

    th,
    td {
      padding: 2rem 1rem;
      height: 5.5rem;
      text-align: center;
      border-bottom: 1px solid #e0e0e3;
    }

    td:last-child {
      padding: 2rem 0;
    }

    .line-ch {
      padding: 2rem 0;
      text-align: center;

      input[type="checkbox"] {
        overflow: hidden;
        width: 0;
        height: 0;

        &+label {
          vertical-align: middle;

          &::before {
            left: 50%;
            top: 50%;
            content: url('../img/icon/checkbox.png');
            transform: translate(-50%, -50%);
            -webkit-transform: translate(-50%, -50%);
            -moz-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            -o-transform: translate(-50%, -50%);
          }
        }

        &:checked {
          &+label {
            &::before {
              content: url('../img/icon/checked.png');
            }
          }
        }
      }
    }
  }
}

.visible {
  input[type="checkbox"] {
    overflow: hidden;
    margin-left: -.2rem;
    width: 0;
    height: 0;

    &+label {
      display: inline-block;
      width: 5rem;
      height: 3.4rem;
      vertical-align: middle;
      background-color: #bfc5d9;

      &::before {
        left: 50%;
        top: 50%;
        font-size: 1.4rem;
        color: #fff;
        content: "숨김";
        transform: translate(-50%, -50%);
        -webkit-transform: translate(-50%, -50%);
        -moz-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        -o-transform: translate(-50%, -50%);
      }
    }

    &:checked+label {
      background-color: #1208a9;

      &::before {
        content: "보임";
      }
    }
  }
}

