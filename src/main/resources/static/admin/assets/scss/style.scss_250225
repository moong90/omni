.modal-wrap {
  z-index: 9999;
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
}

.modal {
  position: absolute;
  top: 5rem;
  @include X-center;
  background-color: #fff;
  border-radius: .5rem;

  -webkit-border-radius: .5rem;
  -moz-border-radius: .5rem;
  -ms-border-radius: .5rem;
  -o-border-radius: .5rem;

  .modal-header {
    @include flex-bt;
    align-items: flex-end;
    padding: 3rem 2rem;
    line-height: 1;
    font-size: 2rem;
    font-weight: 700;
    border-bottom: 1px solid #e3e6e3;

    .modal-close {
      width: 2.5rem;
      height: 2.5rem;
    }
  }

  .modal-inner {
    padding: 2rem 2rem;
    font-size: 1.8rem;
  }

  .modal-top {
    z-index: 20;
    @include relative;
    margin-bottom: 3rem;
    width: 100%;
  }

  .select-wrap {
    @include flex-start;
    align-items: center;
    width: 100%;

    .select-box {
      flex: 1 1 0;

      .select {
        width: 100%;
        font-size: 1.5rem;
      }

      .option {
        width: 100%;
      }
    }
  }

  .label {
    @include relative;
    min-width: 10rem;

    &::after {
      position: absolute;
      right: 1rem;
      content: ":";
    }
  }

  input[type="text"] {
    padding: 0 2rem;
    height: 3.5rem;
    font-size: 1.5rem;
    color: #aaa;
    border: 1px solid #e3e6e3;
  }

  input[type=password] {
    padding: 0 2rem;
    height: 3.5rem;
    font-size: 1.5rem;
    color: #aaa;
    border: 1px solid #e3e6e3;
  }

  .input-box {
    @include flex-start;
    margin-bottom: .5rem;
    width: 100%;
  }

  .modal-body {
    @include relative;
    width: 100%;
    font-size: .8em;

    .sub-tit {
      @include relative;
      margin: 2rem 0 3rem;
      width: 100%;
      line-height: 1;
      font-size: 1.7rem;
    }

    .btn-box {
      position: absolute;
      right: 0;
      top: 2rem;
    }

    .input-box {
      align-items: center;
    }

    .table{
      width: 140rem;
      max-height: 50vh;
    }
  }

  .modal-footer {
    margin-top: auto;
    padding: 3rem;
    border-top: 1px solid #e3e6e3;

    >button {
      border-radius: .3rem;
      -webkit-border-radius: .3rem;
      -ms-border-radius: .3rem;
      -o-border-radius: .3rem;
      -moz-border-radius: .3rem;
    }
  }
}

input:read-only {
