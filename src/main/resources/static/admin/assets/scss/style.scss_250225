@import './variable.scss';

.site-wrap {}

.menu {
  .content {
    @include flex-start;
    align-items: flex-start;
  }
}

.menu-tree {
  overflow-y: scroll;
  padding: 2rem;
  margin-right: 2.7%;
  min-width: 25rem;
  height: 70rem;
  font-size: 1.6rem;
  background-color: #fff;
  border: 1px solid #d8d8d9;

  &::-webkit-scrollbar-track {
    background-color: #ececec;
  }

  &::-webkit-scrollbar-thumb {
    border-radius: 1rem;
    background-color: #a5a5ac;
    -webkit-border-radius: 1rem;
    -moz-border-radius: 1rem;
    -ms-border-radius: 1rem;
    -o-border-radius: 1rem;
  }

  >ul {
    >li {
      margin-top: 1rem;

      &:nth-of-type(1) {
        margin-top: 0;
        margin-bottom: 2rem;

        .dep-01 {
          background: #fefefe;
        }
      }

      .dep-01 {
        @include flex-bt;
        align-items: center;
        padding: .5rem 1.5rem;
        border: 1px solid #d8d8d9;
        background-color: #fefefe;

        >button {
          width: 1.5rem;
          height: 1.5rem;
          background-repeat: no-repeat;
          background-position: center;
          background-image: url('../img/icon/bar.png');
        }
      }

      &:not(:nth-of-type(1)).on {
        .dep-01 {
          >button {
            background-image: url('../img/icon/plus.png');
          }
        }
      }

      .dep-02 {
        margin: 1rem;
        padding-left: 1.5rem;
        font-size: .9em;

        li {
          a {
            display: block;
            padding: .5rem 0 .5rem 2rem;
            background: url('../img/icon/tree.png') left center no-repeat;
          }

          &.on {
            a {
              text-decoration: underline;
            }
          }
        }
      }

      .dep-03 {
        padding-left: 2rem;
      }
    }
  }
}

/*
셀렉트 박스 240628
*/

.select-box {
  display: inline-block;
  @include relative;
  min-width: 11rem;

  .select {
    display: inline-block;
    padding: 1.1rem 1rem 1rem 2rem;
    width: inherit;
    min-width: inherit;
    // height: inherit;
    // line-height: inherit;
    font-size: 1.4rem;
    color: #aaa;
    border: 1px solid #d8d8d9;
    background-color: #fff;
    background-position: right 1rem center;
    background-repeat: no-repeat;
    background-image: url('../img/icon/select.png');

    &.on {
      background-image: url('../img/icon/select-up.png');
    }
  }

  .option {
    position: absolute;
    left: 0;
    display: none;
    width: inherit;
    min-width: inherit;
    border: 1px solid #d8d8d9;
    border-top: 0 none;
    background-color: #fff;
    z-index: 999;

    li {
      padding: 1rem 2rem;
      font-size: 1.4rem;
      color: #aaa;

      a {
        display: block;
        width: 100%;
        height: 100%; //240904
      }
    }
  }
}


