/*
셀렉트 박스 240628
*/
.select-box {
  display: inline-block;
  position: relative;
  left: 0;
  top: 0;
  min-width: 11rem;
}
.select-box .select {
  display: inline-block;
  padding: 1.1rem 1rem 1rem 2rem;
  width: inherit;
  min-width: inherit;
  font-size: 1.4rem;
  color: #aaa;
  border: 1px solid #d8d8d9;
  background-color: #fff;
  background-position: right 1rem center;
  background-repeat: no-repeat;
  background-image: url("../img/icon/select.png");
}
.select-box .select.on {
  background-image: url("../img/icon/select-up.png");
}
.select-box .option {
  position: absolute;
  left: 0;
  display: none;
  width: inherit;
  min-width: inherit;
  border: 1px solid #d8d8d9;
  border-top: 0 none;
  background-color: #fff;
  z-index: 999;
}
.select-box .option li {
  padding: 1rem 2rem;
  font-size: 1.4rem;
  color: #aaa;
}
.select-box .option li a {
  display: block;
  width: 100%;
  height: 100%;
}

