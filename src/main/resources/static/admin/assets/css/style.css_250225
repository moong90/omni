/* 체크 and 라디오 */
.check-wrap input:checked + .check-label::before {
  background-color: #1208a9;
}
.check-wrap .check-label {
  position: relative;
  padding-left: 2.4rem;
  font-size: 1.5rem;
  font-weight: 500;
}
.check-wrap .check-label::before {
  position: absolute;
  left: 0;
  top: 50%;
  content: "";
  width: 1.5rem;
  height: 1.5rem;
  border: 1px solid #ddd;
  border-radius: 0.2rem;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  -webkit-transform: translateY(-50%);
  -moz-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  -o-transform: translateY(-50%);
  -webkit-border-radius: 0.2rem;
  -moz-border-radius: 0.2rem;
  -ms-border-radius: 0.2rem;
  -o-border-radius: 0.2rem;
}

.radio-wrap .radio-label {
  position: relative;
  margin-right: 2rem;
  padding-right: 2rem;
  font-weight: 500;
}
.radio-wrap .radio-label::after {
  position: absolute;
  content: "";
  right: 0;
  top: 50%;
  width: 1.5rem;
  height: 1.5rem;
  border: 1px solid #ddd;
  border-radius: 1.5rem;
  transform: translateY(-50%);
  -webkit-border-radius: 1.5rem;
  -moz-border-radius: 1.5rem;
  -ms-border-radius: 1.5rem;
  -o-border-radius: 1.5rem;
  -webkit-transform: translateY(-50%);
  -moz-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  -o-transform: translateY(-50%);
}

.radio-btn:checked + .radio-label::after {
  background-color: #1208a9;
  transition: background-color 0.2s;
  -webkit-transition: background-color 0.2s;
  -moz-transition: background-color 0.2s;
  -ms-transition: background-color 0.2s;
  -o-transition: background-color 0.2s;
}

